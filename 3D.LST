g=25*SIN(PI/4)
DIM k%(7,2)
DIM q%(11,1)
FOR a%=0 TO 11
  FOR s%=0 TO 1
    READ d%
    q%(a%,s%)=d%
  NEXT s%
NEXT a%
DATA 0,1,0,3,0,4,1,2,1,5,2,3,2,6,3,7,4,5,4,7,5,6,6,7
HIDEM
DO
  a$=INKEY$
  IF a$="Ü"
    alfa=alfa+0.2
  ENDIF
  IF a$="Å"
    alfa=alfa-0.2
  ENDIF
  IF a$="p"
    gamma=gamma+0.2
  ENDIF
  IF a$="o"
    gamma=gamma-0.2
  ENDIF
  beta=(160-MOUSEX)/10
  theta=(160-MOUSEY)/10
  n%=0
  FOR c%=0 TO 7
    IF c%=4
      n%=50
    ENDIF
    k%(c%,0)=g*(COS(alfa+c%*PI/2)-beta)
    k%(c%,1)=g*(SIN(alfa+c%*PI/2)-theta)
    k%(c%,2)=50+n%
  NEXT c%
  CLS
  FOR e%=0 TO 11
    DRAW 160+k%(q%(e%,0),0)/k%(q%(e%,0),2)*50,110+k%(q%(e%,0),1)/k%(q%(e%,0),2)*50 TO 160+k%(q%(e%,1),0)/k%(q%(e%,1),2)*50,110+k%(q%(e%,1),1)/k%(q%(e%,1),2)*50
  NEXT e%
  EXIT IF MOUSEK=1
LOOP
SHOWM
